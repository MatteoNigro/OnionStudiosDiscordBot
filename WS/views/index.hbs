<iframe style="display: none;" name="dummyframe" id="dummyframe"></iframe>
<form action="/sendMessage" method="POST" target="dummyframe">
    <input type="hidden" name="token" value="{{token}}">

    <h1 id="title">Titolo</h1>
    <br>

    <!-- Selezione del reparto -->
    <div id="departmentLabel">
        <h3>{{department}}</h3>
    </div>

    <br> <br>

    <div id="dataLabel">
        <!-- Selezione della data -->
        <label for="data">Data</label>
        <input type="date" id="data">
    </div>

    <br><br>

    <!-- Effettive Daily Review di tutti i membri di quel reparto -->
    {{#each members as |member|}}
    <div id="memberPanel">
        <h3 id="memberName">{{member}}</h3>
        <div id="memberQuestions">
            <h5>Cosa hai fatto nelle ultime 24 ore?</h5>
            <textarea></textarea>
            <h5>Cosa farai nelle prossime 24 ore?</h5>
            <textarea></textarea>
            <h5>Che problematiche stai affrontando?</h5>
            <textarea></textarea>
        </div>
    </div>
    {{/each}}

    <br>
    <div id="submitButton">
        <input type="submit" value="Completa Daily Review">
    </div>













